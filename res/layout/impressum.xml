<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/info_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txt_about_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:layout_marginTop="10dp"
                android:text="@string/info_title"
                android:textColor="#ffffff"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/txt_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/img_medienboard"
                android:background="@drawable/logo_medienboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp" />
            <TextView
                android:id="@+id/txt_company_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#ffffff"
                android:textSize="18sp" />
                
            <TextView
                android:id="@+id/txt_language_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="@string/info_language"
                android:textColor="#ffffff"
                android:textSize="28sp" />

            <CheckBox
                android:id="@+id/cb_language_selector"
                android:layout_width="128dp"
                android:layout_height="22dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/checkbox_background"
                android:button="@drawable/check_info_language"
               />

            <TextView
                android:id="@+id/txt_contact_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="-10dp"
                android:layout_marginTop="25dp"
                android:text="@string/info_contact"
                android:textColor="#ffffff"
                android:textSize="28sp" />
            
              <ImageView
                android:id="@+id/img_historyvision"
                android:background="@drawable/logo_historyvision"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/txt_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_info_call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_info_call" />

                <Button
                    android:id="@+id/btn_info_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_info_email" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>